    scanf("%ld",&f);
    printf("Long int:%ld\n",f);
    
    short int g;
    printf("enter short int:");
    scanf("%hd",&g);
    printf("Short int:%hd\n",g);
    
    long long int h;
    printf("enter integer value:");
    scanf("%lld",&h);
    printf("long long int:%lld\n",h*4);
    
    signed char i;
    printf("enter character:");
    scanf("%c",&i);
    printf("signed char:%c\n",i);
    
    int a,b,sum;
